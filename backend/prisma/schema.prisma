// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String?   @unique
  user42Name   String    @default("No42userName")
  image        String?   @default("https://res.cloudinary.com/djdxw1y13/image/upload/v1676390380/Transcendence/default-avatar_hsktjo.png")
  coalition    String?   @default("Federation")
  status       String?   @default("offline")
  games        Int?      @default(0)
  wins         Int?      @default(0)
  ratio        Float?    @default(0)
  achievements String[]
  score        Int?      @default(0)
  accessToken  String    @default("noToken")
  refreshToken String    @default("noRefreshToken")
  isRegistered Boolean   @default(false)
  Messages     Message[]
  Lobbies      Lobby[]   @relation("joined")
  LobbyOwner   Lobby[]   @relation("owned")
}

model Lobby {
  id         String    @id
  admin      User      @relation(name: "owned", fields: [adminId], references: [id])
  adminId    Int
  Users      User[]    @relation("joined")
  createdAt  DateTime
  type       String
  privacy    String
  maxClients Int
  Messages   Message[]
}

model Message {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime? @default(now())
  author    User?     @relation(fields: [authorId], references: [id])
  authorId  Int?
  lobby     Lobby?    @relation(fields: [lobbyId], references: [id])
  lobbyId   String?
}
